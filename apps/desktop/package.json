{
  "name": "@codoing/desktop",
  "version": "1.0.0",
  "description": "Codo.ing Desktop Application",
  "main": "dist/main.js",
  "author": "Codo.ing Team",
  "license": "MIT",
  "private": true,
  "scripts": {
    "build": "tsc",
    "start": "electron dist/main.js",
    "dev": "tsc && electron dist/main.js",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "preload": "tsc src/app/api/main.preload.ts --outDir dist/app/api --target es2020 --module commonjs"
  },
  "dependencies": {
    "electron": "^34.5.6"
  },
  "devDependencies": {
    "@types/node": "20.19.9",
    "electron-builder": "^24.13.3",
    "typescript": "~5.9.2"
  },
  "build": {
    "appId": "com.codoing.desktop",
    "productName": "Codo.ing",
    "directories": {
      "output": "dist"
    },
    "files": [
      "dist/**/*",
      "node_modules/**/*"
    ],
    "mac": {
      "category": "public.app-category.productivity"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}