{
  "name": "@codo.ing/web",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/web/src",
  "projectType": "application",
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "command": "bun vite build",
        "cwd": "apps/web"
      },
      "outputs": ["apps/web/dist"]
    },
    "serve": {
      "executor": "nx:run-commands",
      "options": {
        "command": "cd apps/web && bun vite"
      }
    },
    "test": {
      "executor": "nx:run-commands",
      "options": {
        "command": "bun vite test",
        "cwd": "apps/web"
      }
    },
    "preview": {
      "executor": "nx:run-commands",
      "options": {
        "command": "bun vite preview",
        "cwd": "apps/web"
      }
    }
  }
}
