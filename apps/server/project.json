{
  "name": "server",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/server/src",
  "projectType": "application",
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "command": "bun build src/main.ts --outdir dist --target node",
        "cwd": "apps/server"
      },
      "outputs": ["{projectRoot}/dist"]
    },
    "serve": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "nx run-many --target=build --projects=@codoing/schema,@codoing/db,trpc-server --parallel",
          "bun --watch src/main.ts"
        ],
        "cwd": "apps/server",
        "parallel": false
      }
    },
    "start": {
      "executor": "nx:run-commands",
      "options": {
        "command": "bun dist/main.js",
        "cwd": "apps/server"
      }
    },
    "test": {
      "executor": "nx:run-commands",
      "options": {
        "command": "bun test",
        "cwd": "apps/server"
      }
    }
  }
}
