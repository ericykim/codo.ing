{
  "name": "@codo.ing/source",
  "version": "0.0.0",
  "license": "MIT",
  "scripts": {
    "format": "biome format --write .",
    "format:check": "biome format .",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "build:libs": "nx run-many --target=build --projects=@codoing/schema,trpc-server --parallel",
    "build:apps": "nx run-many --target=build --projects=server,web,desktop --parallel",
    "build:all": "nx run-many --target=build --all --parallel",
    "web": "nx serve web",
    "server": "nx serve server",
    "trpc": "nx dev trpc-server",
    "electron": "nx serve desktop",
    "db:generate": "drizzle-kit generate:pg --config drizzle.config.ts",
    "db:migrate": "drizzle-kit up:pg --config drizzle.config.ts",
    "db:drop": "drizzle-kit drop --config drizzle.config.ts",
    "db:studio": "drizzle-kit studio --config drizzle.config.ts",
    "nxe:build:frontend": "nx build web",
    "nxe:build:backend": "nx build desktop",
    "nxe:serve:frontend": "nx serve web",
    "nxe:serve:backend": "nx serve desktop",
    "nxe:test:frontend": "nx test web",
    "nxe:test:backend": "nx test desktop",
    "nxe:package:app": "nx run desktop:make --prepackageOnly",
    "nxe:make:app": "nx run desktop:make"
  },
  "private": true,
  "dependencies": {
    "@types/pg": "^8.15.5",
    "better-auth": "^1.3.26",
    "drizzle-orm": "^0.44.6",
    "kysely": "^0.28.7",
    "pg": "^8.16.3",
    "postgres": "^3.4.7"
  },
  "devDependencies": {
    "@babel/core": "^7.14.5",
    "@babel/preset-react": "^7.14.5",
    "@biomejs/biome": "^2.2.4",
    "@nx/devkit": "21.5.3",
    "@nx/jest": "^21.5.3",
    "@nx/js": "21.5.3",
    "@nx/playwright": "21.5.3",
    "@nx/react": "21.5.3",
    "@nx/vite": "21.5.3",
    "@nx/web": "21.5.3",
    "@nx/workspace": "21.5.3",
    "@playwright/test": "^1.36.0",
    "@swc-node/register": "~1.9.1",
    "@swc/cli": "~0.6.0",
    "@swc/core": "~1.5.7",
    "@swc/helpers": "~0.5.11",
    "@tailwindcss/vite": "^4.1.13",
    "@tanstack/router-vite-plugin": "^1.131.49",
    "@testing-library/dom": "10.4.0",
    "@testing-library/react": "16.1.0",
    "@types/jest": "^30.0.0",
    "@types/node": "20.19.9",
    "@types/react": "19.0.0",
    "@types/react-dom": "19.0.0",
    "@vitejs/plugin-react": "^4.2.0",
    "@vitest/coverage-v8": "^3.0.5",
    "@vitest/ui": "^3.0.0",
    "ajv": "^8.0.0",
    "drizzle-kit": "^0.31.5",
    "electron": "^34.5.6",
    "jest": "^30.0.2",
    "jest-environment-node": "^30.0.2",
    "jest-util": "^30.0.2",
    "jiti": "2.4.2",
    "jsdom": "~22.1.0",
    "nx": "21.5.3",
    "nx-electron": "^21.0.1",
    "nx-mcp": "^0.6.4",
    "tailwindcss": "^4.1.13",
    "ts-jest": "^29.4.0",
    "ts-node": "10.9.1",
    "tslib": "^2.3.0",
    "typescript": "~5.9.2",
    "vite": "^7.0.0",
    "vite-plugin-dts": "~4.5.0",
    "vitest": "^3.0.0",
